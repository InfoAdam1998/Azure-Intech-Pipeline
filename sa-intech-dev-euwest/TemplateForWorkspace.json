{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"workspaceName": {
			"type": "string",
			"metadata": "Workspace name",
			"defaultValue": "sa-intech-dev-euwest"
		},
		"sa-intech-dev-euwest-WorkspaceDefaultSqlServer_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'sa-intech-dev-euwest-WorkspaceDefaultSqlServer'",
			"defaultValue": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=tcp:sa-intech-dev-euwest.sql.azuresynapse.net,1433;Initial Catalog=@{linkedService().DBName}"
		},
		"sa-intech-dev-euwest-WorkspaceDefaultStorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dlintech001.dfs.core.windows.net"
		}
	},
	"variables": {
		"workspaceId": "[concat('Microsoft.Synapse/workspaces/', parameters('workspaceName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('workspaceName'), '/sa-intech-dev-euwest-WorkspaceDefaultSqlServer')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"parameters": {
					"DBName": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "AzureSqlDW",
				"typeProperties": {
					"connectionString": "[parameters('sa-intech-dev-euwest-WorkspaceDefaultSqlServer_connectionString')]"
				},
				"connectVia": {
					"referenceName": "AutoResolveIntegrationRuntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('workspaceId'), '/integrationRuntimes/AutoResolveIntegrationRuntime')]"
			]
		},
		{
			"name": "[concat(parameters('workspaceName'), '/sa-intech-dev-euwest-WorkspaceDefaultStorage')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('sa-intech-dev-euwest-WorkspaceDefaultStorage_properties_typeProperties_url')]"
				},
				"connectVia": {
					"referenceName": "AutoResolveIntegrationRuntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('workspaceId'), '/integrationRuntimes/AutoResolveIntegrationRuntime')]"
			]
		},
		{
			"name": "[concat(parameters('workspaceName'), '/AutoResolveIntegrationRuntime')]",
			"type": "Microsoft.Synapse/workspaces/integrationRuntimes",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"type": "Managed",
				"typeProperties": {
					"computeProperties": {
						"location": "AutoResolve",
						"dataFlowProperties": {
							"computeType": "General",
							"coreCount": 8,
							"timeToLive": 0
						}
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/WorkspaceSystemIdentity')]",
			"type": "Microsoft.Synapse/workspaces/credentials",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"type": "ManagedIdentity",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/SQL script view per country')]",
			"type": "Microsoft.Synapse/workspaces/sqlscripts",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"content": {
					"query": "-- Drop view if it exists\nDROP VIEW IF EXISTS GermanyView;\nGO\n\n-- Create Germany view with Geography column retained\nCREATE VIEW GermanyView AS\nSELECT *,\n       'Germany' AS geography\nFROM OPENROWSET(\n    BULK 'https://dlintech001.dfs.core.windows.net/gold/Bank_Churn/geography=Germany/date_of_processing=2025-12-05/',\n    FORMAT = 'PARQUET'\n) AS [result];\nGO\n\n-- Drop view if it exists\nDROP VIEW IF EXISTS FranceView;\nGO\n\n-- Create France view with Geography column retained\nCREATE VIEW FranceView AS\nSELECT *,\n       'France' AS geography\nFROM OPENROWSET(\n    BULK 'https://dlintech001.dfs.core.windows.net/gold/Bank_Churn/geography=France/date_of_processing=2025-12-05/',\n    FORMAT = 'PARQUET'\n) AS [result];\nGO\n\n-- Drop view if it exists\nDROP VIEW IF EXISTS SpainView;\nGO\n\n-- Create Spain view with Geography column retained\nCREATE VIEW SpainView AS\nSELECT *,\n       'Spain' AS geography\nFROM OPENROWSET(\n    BULK 'https://dlintech001.dfs.core.windows.net/gold/Bank_Churn/geography=Spain/date_of_processing=2025-12-05/',\n    FORMAT = 'PARQUET'\n) AS [result];\nGO\n",
					"metadata": {
						"language": "sql"
					},
					"currentConnection": {
						"databaseName": "gold_db",
						"poolName": "Built-in"
					},
					"resultLimit": 5000
				},
				"type": "SqlQuery"
			},
			"dependsOn": []
		}
	]
}